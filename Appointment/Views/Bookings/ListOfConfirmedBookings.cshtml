@model IEnumerable<Appointment.Models.Booking>

@{
    ViewBag.Title = "ListOfConfirmedBookings";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>List of Confirmed Bookings</h2>

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
<table class="table table-hover table-striped" id="my_list">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.bookingTime.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.style.Hair_Cut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MemberEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookDate)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Hair_Cut)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsFree)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.bookingTime.Time)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.style.Hair_Cut)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MemberEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hair_Cut)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsFree)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                @*<td>
                    @Html.ActionLink("Confirm Booking", "ConfirmForUser", new { id = item.BookId })
                    @Html.ActionLink("Edit", "Edit", new { id=item.BookId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.BookId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.BookId })
                    @Html.ActionLink("Confirm", "Confirmed", new { id = item.BookId })
                </td>*@
            </tr>
        }
    </tbody>
</table>
<script type="text/javascript">
    $('#my_list').dataTable(
          {
              dom: 'Bfrtip',
              lengthMenu: [
                  [ 10, 25, 50, -1 ],
                  [ '10 rows', '25 rows', '50 rows', 'Show all' ]
              ],
              buttons: [
                  'pageLength', 'pdf', 'print'
              ]
          }
        );
    $('#my_list')
       .removeClass('display')
       .addClass('table table-striped table-hover');
</script>
