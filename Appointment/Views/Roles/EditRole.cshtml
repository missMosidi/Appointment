@model Appointment.Models.RolesViewModel
@{
    ViewBag.Title = "Edit Role";
}
<div class="container">
    <br />
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(m => m.RoleId)
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h2>Edit Role</h2>
            <hr />
            <div class="form-group">
                @Html.Label("Role Name")
                @Html.TextBoxFor(m => m.RoleName, null, new { @class = "form-control", @required = "required" })
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-outline-dark">Update Role</button>|<a class="btn btn-outline-dark" href="@(Url.Action("Index"))">Back to List</a>
        </div>
    }
    <br />
</div>
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
